<src:ViewBase x:Class="InventoryManager.Views.AddDeviceView"
        xmlns:src="clr-namespace:InventoryManager.Views"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:InventoryManager"
        Title="Заполните данные для устройства"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Width="350">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5 0 5 5" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5 0 5 10" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5 0 5 5" />
        </Style>
    </Window.Resources>
    <StackPanel>
		<TextBlock Text="Инвентарный номер" />
		<TextBox />
		<TextBlock Text="Тип" />
		<ComboBox ItemsSource="{Binding UserGroups}" />
		<TextBlock Text="Сетевое имя" />
		<TextBox />
		<Button Content="Добавить" />
    </StackPanel>
</src:ViewBase>
