<src:ViewBase x:Class="InventoryManager.Views.DeviceMovementHistoryView"
		xmlns:src="clr-namespace:InventoryManager.Views"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		ResizeMode="NoResize"
		SizeToContent="WidthAndHeight">
    <StackPanel>
		<ListView Height="300" ItemsSource="{Binding SelectedDeviceMovementHistoryNotes}"
			SelectionMode="Single">
			<ListView.View>
				<GridView>
					<GridViewColumn Width="150" Header="Дата" DisplayMemberBinding="{Binding Date}" />
					<GridViewColumn Width="110" Header="Корпус" DisplayMemberBinding="{Binding TargetCabinet.Housing.Name}" />
					<GridViewColumn Width="80" Header="Кабинет" DisplayMemberBinding="{Binding TargetCabinet.Name}" />
					<GridViewColumn Width="150" Header="Комментарий" DisplayMemberBinding="{Binding Reason}" />
				</GridView>
			</ListView.View>
		</ListView>
    </StackPanel>
</src:ViewBase>
