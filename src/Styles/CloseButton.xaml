<src:PartialViewBase x:Class="InventoryManager.UI.CloseButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:src="clr-namepace:InventoryManager.Views">
	<Canvas Height="13" Width="13"
		HorizontalAlignment="Right">
		<Path Style="{DynamicResource tileMenuButtonsStyle}" StrokeThickness="4"
			MouseUp="CloseApplication"
			MouseLeftButtonDown="DragWindow">
			<Path.Data>
				<PathGeometry>
					<PathGeometry.Figures>
						<PathFigure StartPoint="0,0">
							<LineSegment Point="13,13" />
						</PathFigure>
						<PathFigure StartPoint="0,13">
							<LineSegment Point="13,0" />
						</PathFigure>
					</PathGeometry.Figures>
				</PathGeometry>
			</Path.Data>
		</Path>
	</Canvas>
</src:PartialViewBase>
