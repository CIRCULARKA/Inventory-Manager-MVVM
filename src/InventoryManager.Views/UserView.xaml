<src:ViewBase x:Class="InventoryManager.Views.UserView"
        xmlns:src="clr-namespace:InventoryManager.Views"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно пользователя"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Width="500">
    <StackPanel>
        <TextBlock Text="Управление устройствами"
            FontSize="16" FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="0 5 0 10" />

        <ListBox ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock FontSize="18" Text="{Binding Path=NetworkName}" />
                        <TextBlock Text="{Binding Path=DeviceType.Name}" />
                        <TextBlock Text="{Binding Path=InventoryNumber}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</src:ViewBase>
