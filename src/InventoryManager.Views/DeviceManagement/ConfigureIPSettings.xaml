<src:ViewBase x:Class="InventoryManager.Views.ConfigureIPSettingsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:src="clr-namespace:InventoryManager.Views"
	WindowStartupLocation="CenterScreen"
	Title="Настройка маски подсети"
	SizeToContent="Height"
	Width="400"
	ResizeMode="NoResize">
	<StackPanel>
		<TextBlock TextWrapping="Wrap" Margin="12 0 12 7">
			<TextBlock.Text>
				Введите маску подсети.
				На её основе вы сможете выбирать IP-адреса для устройств
				из автоматически сгенерированного диапазона
			</TextBlock.Text>
		</TextBlock>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
			<TextBox Width="50" TextAlignment="Center" MaxLength="2" />
		</StackPanel>
		<Button Content="Применить" Height="30" Margin="12" Command="{Binding ApplyIPMaskChangesCommand}" />
	</StackPanel>
</src:ViewBase>
