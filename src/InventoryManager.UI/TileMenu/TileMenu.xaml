<ui:TileMenuElement x:Class="InventoryManager.UI.TileMenu"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:ui="clr-namespace:InventoryManager.UI"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<ui:TileMenuElement.Template>
		<ControlTemplate TargetType="ui:TileMenu">
			<Grid PreviewMouseLeftButtonDown="DragParentWindow"
				Background="{TemplateBinding MenuBackground}">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<TextBlock FontWeight="Medium"
					Text="{TemplateBinding Title}"
					Foreground="{TemplateBinding TitleForeground}"
					Margin="5 0 0 0"
					x:Name="tileTitle" />
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1"
					Margin="0 3 7 0">
					<ui:CollapseButton Margin="0 0 9 0" />
					<ui:CloseButton />
				</StackPanel>
			</Grid>
		</ControlTemplate>
	</ui:TileMenuElement.Template>
</ui:TileMenuElement>
