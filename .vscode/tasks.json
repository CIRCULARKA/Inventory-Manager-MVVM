{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build & Run",
            "dependsOn": [
                "Build",
                "Run"
            ],
            "dependsOrder": "sequence",
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Migrate & Update Database",
            "dependsOn": [
                "Drop Database",
                "Remove Migration",
                "Add Migration",
                "Update Database"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Remove Migration",
            "command": "dotnet",
            "args": [
                "ef",
                "migrations",
                "remove"
            ]
        },
        {
            "label": "Add Migration",
            "command": "dotnet",
            "args": [
                "ef",
                "migrations",
                "add",
                "Init",
                "-o",
                "src/InventoryManager.Migrations/"
            ]
        },
        {
            "label": "Drop Database",
            "command": "dotnet",
            "args": [
                "ef",
                "database",
                "update",
                "0"
            ]
        },
        {
            "label": "Update Database",
            "command": "dotnet",
            "args": [
                "ef",
                "database",
                "update"
            ]
        },
        {
            "label": "Git: Stage Opened File",
            "command": "git",
            "args": [
                "add",
                "${relativeFile}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
            },
            "problemMatcher": []
        }
    ]
}
