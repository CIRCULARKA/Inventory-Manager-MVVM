<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ui="clr-namespace:InventoryManager.UI">
	<Style x:Key="tileMenuButtonsStyle" TargetType="Path">
		<Setter Property="Stroke" Value="#1174ee" />
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Stroke" Value="#589ef3" />
			</Trigger>
		</Style.Triggers>
	</Style>
	<Style x:Key="windowStyle" TargetType="Window">
		<Setter Property="Background" Value="#4090f2" />
		<Setter Property="WindowStyle" Value="None" />
		<Setter Property="AllowsTransparency" Value="True" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Window">
					<Border CornerRadius="5" Background="{TemplateBinding Background}">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition />
							</Grid.RowDefinitions>
							<ui:TileMenu Title="{TemplateBinding Title}"
								TitleForeground="#b8d5fa"
								MenuBackground="#4090f2"
								Margin="0 5 0 7" />
							<Border Grid.Row="1">
								<AdornerDecorator>
									<ContentPresenter />
								</AdornerDecorator>
							</Border>
						</Grid>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
