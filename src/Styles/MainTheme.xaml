<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style x:Key="windowStyle" TargetType="Window">
		<Setter Property="Background" Value="#4090f2" />
	</Style>
	<Style x:Key="regularTextStyle" TargetType="TextBlock">
		<Setter Property="Foreground" Value="#b8d5fa" />
		<Setter Property="FontWeight" Value="Medium" />
	</Style>
	<Style x:Key="h1TextStyle" TargetType="TextBlock">
		<Setter Property="FontSize" Value="18" />
		<Setter Property="Foreground" Value="#d0e3fb" />
		<Setter Property="FontWeight" Value="SemiBold" />
	</Style>
	<Style x:Key="h2TextStyle" TargetType="TextBlock">
		<Setter Property="FontSize" Value="15" />
		<Setter Property="Foreground" Value="#d0e3fb" />
		<Setter Property="FontWeight" Value="Medium" />
	</Style>
	<Style x:Key="textBoxStyle" TargetType="TextBox">
		<Setter Property="Background" Value="#2882f0" />
		<Setter Property="Foreground" Value="#b8d5fa" />
		<Setter Property="BorderThickness" Value="0" />
	</Style>
	<Style x:Key="buttonStyle" TargetType="Button">
		<Setter Property="Background" Value="#2882f0" />
		<Setter Property="Foreground" Value="#b8d5fa" />
		<Setter Property="BorderThickness" Value="0" />
	</Style>
	<ControlTemplate x:Key="buttonTemplate" TargetType="Button">
		<Border CornerRadius="5" BorderThickness="0">
			<ContentControl Background="#2882f0" />
		</Border>
	</ControlTemplate>
</ResourceDictionary>
